<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yjiang.base.modular.system.dao.ArticleImageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yjiang.base.modular.system.model.ArticleImage">
        <id column="id" property="id" />
        <result column="file_name" property="fileName" />
        <result column="order_count" property="orderCount" />
        <result column="article_id" property="articleId" />
        <result column="banner_flag" property="bannerFlag" />
        <result column="bucket_name" property="bucketName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, file_name, order_count, article_id, banner_flag, bucket_name
    </sql>

</mapper>
